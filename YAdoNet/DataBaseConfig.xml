<?xml version="1.0" encoding="utf-8" ?>
<!--数据库配置文件示例。-->
<!--DataBaseConfig为数据库配置文件根节点名称-->
<DataBaseConfig>
  
  <!--
  NodeName为节点名称，用来区分多个数据库配置。
  databaseType为数据库类型，如果没配置默认为MSSQL。
  -->
  <NodeName databaseType="MSSQL">
    <!--根据不同类型数据库设置配置文件。-->
  </NodeName>

  <!--
  SQLServer数据库配置示例。
  -->
  <SQLServer databaseType="MSSQL">
    <!--是否使用windows身份验证，是为true，否则为false，此配置不能加密，可以不设置。-->
    <IntegratedSecurity>false</IntegratedSecurity>
    <!--服务器名称，Crypto标识加密类型，目前支持的有AES和DES-->
    <ServerName Crypto="NO">localhost</ServerName>
    <!--数据库端口号，如果不配置则问默认端口，Crypto标识加密类型，目前支持的有AES和DES-->
    <ServerPort Crypto="NO">1433</ServerPort>
    <!--数据库实例名，如果不配置则使用默认实例名，Crypto标识加密类型，目前支持的有AES和DES-->
    <Example Crypto="NO"></Example>
    <!--数据库名称，Crypto标识加密类型，目前支持的有AES和DES-->
    <DataBaseName Crypto="NO">YAgileASP</DataBaseName>
    <!--登陆用户名，Crypto标识加密类型，目前支持的有AES和DES-->
    <UserID Crypto="NO">sa</UserID>
    <!--登陆密码，Crypto标识加密类型，目前支持的有AES和DES-->
    <UserPassword Crypto="NO">123456</UserPassword>
    <!--连接超时时间，不能加密，可以不设置。-->
    <ConnectTimeout>15</ConnectTimeout>
    <!--获取或设置连接被销毁前在连接池中存活的最短时间（以秒为单位），不能加密，可以不设置。-->
    <LoadBalanceTimeout>0</LoadBalanceTimeout>
    <!--连接字符串连接池中所允许的最大连接数，不加密，可以不设置。-->
    <MaxPoolSize>5</MaxPoolSize>
    <!--特定连接字符串连接池中所允许的最小连接数，不能加密，可以不设置。-->
    <MinPoolSize>0</MinPoolSize>
    <!--指示每次请求连接时该连接是汇入连接池还是显式打开，是为true，否则为false，不能加密，可以不设置。-->
    <Pooling>true</Pooling>
  </SQLServer>

  <!--
  SQLite数据库配置。
  -->
  <SQLite databaseType="SQLite">
    <!--数据库文件。-->
    <FileName Crypto="NO"></FileName>
  </SQLite>

  <!--
  Access数据库配置。
  -->
  <Access databaseType="Access">
    <!--数据库文件。-->
    <FileName Crypto="NO">D:\Test\testdb.mdb</FileName>
    <!--数据库密码。-->
    <Password>123</Password>
  </Access>

  <!--
  Access2007数据库配置。
  -->
  <Access2007 databaseType="Access2007">
    <!--数据库文件。-->
    <FileName Crypto="NO">D:\Test\testdb.accdb</FileName>
    <!--数据库密码。-->
    <Password Crypto="NO">123</Password>
  </Access2007>
</DataBaseConfig>